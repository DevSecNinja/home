http:
  middlewares:
    middlewares-redirect-to-https:
      redirectscheme:
        scheme: "https"
        permanent: true
    middlewares-rate-limit:
      rateLimit:
        average: 100
        burst: 50
    middlewares-secure-headers:
      headers:
        accessControlAllowMethods:
          - "GET"
          - "OPTIONS"
          - "PUT"
        accessControlMaxAge: 100
        hostsProxyHeaders:
          - "X-Forwarded-Host"
        stsSeconds: 63072000
        stsIncludeSubdomains: true
        stsPreload: true
        forceSTSHeader: true
        # frameDeny: true # overwritten by customFrameOptionsValue
        contentTypeNosniff: true
        browserXssFilter: true
        referrerPolicy: "same-origin"
        # Setting contentSecurityPolicy is more secure but it can break things. Proper auth will reduce the risk.
        # the below line also breaks some apps due to 'none' - sonarr, radarr, etc.
        permissionsPolicy: "camera 'none'; geolocation 'none'; microphone 'none'; payment 'none'; usb 'none'; vr 'none';"
        customRequestHeaders:
          X-Forwarded-Proto: https
        customResponseHeaders:
          X-Robots-Tag: "none,noarchive,nosnippet,notranslate,noimageindex,"
          server: ""
    middlewares-auth:
      forwardAuth:
        address: "http://traefik-forward-auth:4181"
        trustForwardHeader: true
        authResponseHeaders:
          - "X-Forwarded-User"
    middlewares-docker-proxy-auth:
      basicAuth:
        users:
          - "{{ generic__docker_traefik_htpasswd_entry }}"
    middlewares-whitelist-mgmt:
      ipAllowList:
        sourceRange:
          - "127.0.0.1/32"
          - "192.168.1.11"
    middlewares-whitelist-webservers:
      ipAllowList:
        sourceRange:
          - "127.0.0.1/32"
          - "192.168.1.11"
          - "192.168.60.2"
    middlewares-whitelist-localnetwork:
      ipAllowList:
        sourceRange:
          - "192.168.0.0/16"
    middlewares-whitelist-svlinfra:
      ipAllowList:
        sourceRange:
          - "192.168.1.15"
    middlewares-mtls:
      passTLSClientCert:
        pem: true
        info:
          sans: true
          subject:
            commonName: true
            serialNumber: true
    middlewares-cors:
      headers:
        accessControlAllowMethods:
          - "GET"
          - "OPTIONS"
          - "POST"
          - "PUT"
        accessControlAllowHeaders:
          - "Content-Type"
          - "Authorization"
          - "X-Requested-With"
        accessControlAllowCredentials: true
        accessControlAllowOriginList:
          - "https://api-tester.{{ generic__domain_name }}"
          - "https://api-tester-admin.{{ generic__domain_name }}"
        accessControlMaxAge: 100
        addVaryHeader: true
    # Middleware to spoof headers for apps like Plex
    # that enforce local access via header inspection
    middlewares-header-spoof:
      headers:
        customRequestHeaders:
          Host: "127.0.0.1"
          Referer: "http://127.0.0.1"
          Origin: "http://127.0.0.1"
          X-Real-IP: "{clientip}"
          X-Forwarded-For: "{clientip}"
