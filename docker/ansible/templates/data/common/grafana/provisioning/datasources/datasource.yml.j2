apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    orgId: 1
    url: http://prometheus:9090
    basicAuth: false
    isDefault: true
    editable: false

  - name: Loki
    type: loki
    access: proxy
    orgId: 1
    url: http://loki:3100
    basicAuth: false
    isDefault: false
    version: 1
    editable: false

  - name: InfluxDB
    type: influxdb
    access: proxy
    orgId: 1
    url: http://influxdb:8086
    editable: false
    jsonData:
      version: Flux
      organization: {{ apps__influxdb_organization }}
      defaultBucket: init-bucket
      tlsSkipVerify: true
    secureJsonData:
      token: {{ apps__influxdb_admin_token }}
