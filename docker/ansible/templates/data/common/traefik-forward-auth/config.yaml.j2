# Example: https://github.com/ItalyPaleAle/traefik-forward-auth/blob/main/config.sample.yaml

server:
  # External hostname Traefik will use
  hostname: "auth-{{ generic__hostname_suffix }}.{{ generic__domain_name }}"

cookies:
  # Use the main domain so sub-domains share the cookie
  domain: "{{ generic__domain_name }}"
  # Match your custom cookie name
  namePrefix: "_forward_auth_{{ generic__hostname_suffix }}"

tokens:
  # Keep users signed in for 12 hours instead of the 2-hour default
  sessionLifetime: "12h"
  # Key used to sign session tokens
  signingKey: "{{ apps__traefik_forward_auth_secret }}"

logs:
  level: "info"          # default is fine
  omitHealthChecks: true # default is fine

portals:
  - name: "main"
    providers:
      - microsoftEntraID:
          tenantID: "{{ apps__oauth2_proxy_azure_tenant_id }}"
          clientID: "{{ apps__oauth2_proxy_azure_client_id }}"
          clientSecret: "{{ apps__oauth2_proxy_azure_client_secret }}"
