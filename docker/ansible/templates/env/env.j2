# Apps
{% if 'webservers' in group_names %}
## Cloudflare
CLOUDFLARE_EMAIL={{ apps_cloudflare_email }}
CLOUDFLARE_API_TOKEN={{ apps__cloudflare_api_token }}
{% endif %}

{% if 'management' in group_names %}
CLOUDFLARE_DOMAIN_1_FQDN={{ apps__cloudflare_domain_1_fqdn }}
CLOUDFLARE_DOMAIN_1_ZONE_ID={{ apps__cloudflare_domain_1_zone_id }}

CLOUDFLARE_DOMAIN_1_OBFUSCATED_FQDN={{ apps__cloudflare_domain_1_obfuscated_fqdn }}
{% endif %}

{% if 'webservers' in group_names %}
## Grafana
GRAFANA_ADMIN_USER={{ apps__grafana_admin_user }}
GRAFANA_ADMIN_PASSWORD={{ apps__grafana_admin_password }}

## OAuth2 Proxy
OAUTH2_PROXY_WHITELIST_DOMAINS={{ apps__oauth2_proxy_whitelist_domains }}
