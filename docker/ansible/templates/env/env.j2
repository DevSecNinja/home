UNIFI_MONGO_PASS={{ apps__unifi_db_password }}
{% endif %}

{% if 'production' in group_names %}
## Plex
PLEX_CLAIM_TOKEN={{ apps__plex_claim_token }}
## Samba
SAMBA_USERNAME={{ apps__samba_username }}
SAMBA_PASSWORD={{ apps__samba_password }}
{% endif %}
