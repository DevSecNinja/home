# Generic
PUID={{ puid }}
PGID={{ pgid }}
TZ={{ tz }}
DB_ENC_PASSPHRASE={{ generic__database_encryption_passphrase }}

GENERIC_HOSTNAME_PREFIX={{ generic__hostname_prefix }}
GENERIC_HOSTNAME_SUFFIX={{ generic__hostname_suffix }}
GENERIC_HOSTNAME_OS_TYPE={{ generic__hostname_os_type }}

# Docker
DOCKERDIR={{ docker_dir }}
DOCKERDATADIR={{ docker_data_dir }}

# Domains
DOMAINNAME={{ generic__domain_name }}
